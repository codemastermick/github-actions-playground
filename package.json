{
  "name": "github-actions-playground",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "sideEffects": false,
  "scripts": {
    "clean": "concurrently --kill-others \"rimraf dist\" \"rimraf coverage\"",
    "lint": "eslint",
    "build": "cross-env NODE_ENV=development webpack --config webpack/webpack.config.js --no-watch",
    "build:watch": "cross-env NODE_ENV=development webpack --config webpack/webpack.config.js",
    "build:prod": "cross-env NODE_ENV=production webpack --config webpack/webpack.config.js",
    "predev": "run-s \"clean\" \"build\"",
    "dev": "concurrently --kill-others-on-fail \"nodemon --watch src -e ts,js --exec node --unhandled-rejections=strict ./dist/index.js\" \"npm run build:watch\"",
    "start": "npm run clean && npm run build:prod && node --unhandled-rejections=strict ./dist/index.js",
    "test": "mocha --config .mocharc.json -r ts-node/register '**/*.test.ts' --unhandled-rejections=strict",
    "test:coverage": "c8 -c .c8rc npm test"
  },
  "keywords": [],
  "author": "Codemaster Mick",
  "license": "ISC",
  "dependencies": {
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.0",
    "@types/dotenv-safe": "^8.1.2",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "c8": "^7.11.0",
    "chai": "^4.3.6",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-prettier": "^4.0.0",
    "fork-ts-checker-webpack-plugin": "^7.0.0",
    "mocha": "^9.2.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  }
}
